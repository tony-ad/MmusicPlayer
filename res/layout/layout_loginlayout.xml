<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_login_LL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false" 
    android:orientation="vertical" 
    android:background="#ffffff"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"  
        android:background="#000000" 
        >
     	<Button 
     	    android:id="@+id/button_loginlayout_backbutton"
     	    android:layout_width="30dp"
     	    android:layout_height="30dp"
     	    android:background="@drawable/backbutton"
     	    
     	    />   
     	 <TextView 
          	 android:layout_width="wrap_content"
     	     android:layout_height="match_parent"
     	     android:text="登陆Mmusic"
     	     android:textColor="#ffffff"
     	     android:textSize="24sp"
     	     android:layout_centerInParent="true"
     	     android:gravity="center"
     	     />
     </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:baselineAligned="false" 
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        >

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="账号:"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="bottom"
            />
        <EditText 
            android:id="@+id/edittext_loginlayout_user"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:textSize="15sp"
            android:hint="请输入账号"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:baselineAligned="false" 
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="密码:"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="bottom"
            />
        <EditText 
            android:id="@+id/edittext_loginlayout_passwork"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:textSize="15sp"
            android:hint="请输入密码"
            android:layout_marginLeft="2dp"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >
        <Button 
            android:id="@+id/button_loginlayout_forgetpasswork"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="忘记密码?"
            android:textColor="#4A4AFF"
            android:background="#ffffff"
            android:layout_marginRight="5dp"
            />
        <Button
            android:id="@+id/button_loginlayout_register"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="注册"
            android:textColor="#4A4AFF"
            android:background="#ffffff"
            />
    </LinearLayout>
    <Button 
        android:id="@+id/button_loginlayout_loginButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="登陆"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:background="#4A4AFF"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    
</LinearLayout>
